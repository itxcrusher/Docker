<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="./logo.png">
    <title>@ViewData["Title"] | Art Gallery</title>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Admin_Panel.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Caprasimo&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
    
</head>
<body>
    <header>
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img id="logo" src="./logo.png" /></a>
        <div id="icons">
            <a href="#"><i class="fa-solid fa-bell"></i></a>
            <a href="#"><i class="fa-solid fa-user"></i></a>
        </div>
    </header>
    <main>
        <aside class="nav-menu">
            <ul>
                <li><a href="#dashboard" class="link-item color"><i class="fa-solid fa-house"></i>&nbsp Dashboard</a></li>
                <li><a href="#art" class="link-item"><i class="fa-solid fa-palette"></i>&nbsp Artworks</a></li>
                <li><a href="#users" class="link-item"><i class="fa-solid fa-users"></i> Users</a></li>
                <li><a href="#activity" class="link-item"><i class="fa-solid fa-book"></i>&nbsp Activity Log</a></li>
            </ul>
            <ul>
                <li><a href="#"><i class="fa-solid fa-gear"></i>&nbsp Settings</a></li>
                <li><a href="#"><i class="fa-solid fa-share-from-square"></i> Logout</a></li>
            </ul>
        </aside>
        <section role="main" class="pb-3 text-center">
            @RenderBody()
        </section>
    </main>
    <!-- Icons -->
    <script src="https://kit.fontawesome.com/1402ff1337.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>